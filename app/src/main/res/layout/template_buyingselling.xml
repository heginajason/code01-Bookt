<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/bookimage"
            android:id="@+id/imageViewBuyingSelling"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="9dp" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:id="@+id/textView_bookTitleBuyingSelling"
            android:textSize="18sp"
            android:layout_height="25dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_alignTop="@+id/imageViewBuyingSelling"
            android:layout_toRightOf="@+id/imageViewBuyingSelling"
            android:layout_toEndOf="@+id/imageViewBuyingSelling" />

        <TextView
            android:text="TextView"
            android:layout_height="wrap_content"
            android:id="@+id/textView_locationBuyingSelling"
            android:layout_width="match_parent"
            android:layout_above="@+id/textView_priceRangeBuyingSelling"
            android:layout_alignLeft="@+id/textView_bookTitleBuyingSelling"
            android:layout_alignStart="@+id/textView_bookTitleBuyingSelling"
            android:layout_marginBottom="7dp" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_bookAuthorBuyingSelling"
            android:layout_below="@+id/textView_bookTitleBuyingSelling"
            android:layout_alignLeft="@+id/textView_bookTitleBuyingSelling"
            android:layout_alignStart="@+id/textView_bookTitleBuyingSelling"
            android:layout_marginTop="8dp" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_priceRangeBuyingSelling"
            android:layout_alignBottom="@+id/imageViewBuyingSelling"
            android:layout_alignLeft="@+id/textView_locationBuyingSelling"
            android:layout_alignStart="@+id/textView_locationBuyingSelling" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_bookTitleBuyingSellingStatus"
            android:layout_alignBaseline="@+id/textView_priceRangeBuyingSelling"
            android:layout_alignBottom="@+id/textView_priceRangeBuyingSelling"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp" />

    </RelativeLayout>
</LinearLayout>
